<div class="section-wrapper">
<div class="section-content">
<div name="endpoint-{{#idify}}{{this.details.operationId}}{{/idify}}" data-unique="endpoint-{{#idify}}{{this.details.operationId}}{{/idify}}"></div>
<h3 id="endpoint-{{#idify}}{{this.details.operationId}}{{/idify}}" class="endpoint">{{this.details.operationId}}</h3>
<pre><code class="restpath no-highlight">{{#capitalize}}{{this.httpmethod}}{{/capitalize}} {{this.path}}</code></pre>
{{#convertMarkdown}}{{{this.details.description}}}{{/convertMarkdown}}
{{#if this.details.x-oauthpermissions}}
  <p>Required <a href="#usingoauth">permissions</a>:
    {{#each this.details.x-oauthpermissions}}
      <code>{{this}}</code>
    {{/each}}
  </p>
{{/if}}
{{#if this.haspathparams}}
<h4>Path Parameters</h4>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    {{#each this.pathparams}}
    <tr>
      <td><code>{{this.name}}</code>{{#checkRequired}}{{this.required}}{{/checkRequired}}</td>
      <td><code>{{#if this.type}}{{this.type}}{{else}}{{#linkToType}}{{this.schema.$ref}}{{/linkToType}}{{/if}}</code></td>
      <td>{{#convertMarkdown}}{{{this.description}}}{{/convertMarkdown}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{/if}}

{{#if this.hasqueryparams}}
<h4>Query Parameters</h4>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    {{#each this.queryparams}}
    <tr>
      <td><code>{{this.name}}</code>{{#checkRequired}}{{this.required}}{{/checkRequired}}</td>
      <td><code>{{#if this.type}}{{this.type}}{{else}}{{#linkToType}}{{this.schema.$ref}}{{/linkToType}}{{/if}}</code></td>
      <td>{{#convertMarkdown}}{{{this.description}}}{{/convertMarkdown}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{/if}}

{{#if this.hasbodyparams}}
<h4>Body Parameters</h4>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    {{#each this.bodyparams}}
    <tr>
      <td><code>{{this.name}}</code>{{#checkRequired}}{{this.required}}{{/checkRequired}}</td>
      <td>
        <code>
          {{#if this.details.isobjectarray}}
            {{#linkToType}}{{~this.details.items.$ref~}}{{/linkToType}}[]
          {{else if this.details.isbasearray}}
            {{~this.details.items.type~}}[]
          {{else if this.details.type}}
            {{~this.details.type~}}
          {{else}}
            {{#linkToType}}
              {{~this.details.$ref~}}
            {{/linkToType}}
          {{/if}}
        </code>
      </td>
      <td>{{#convertMarkdown}}{{{this.details.description}}}{{/convertMarkdown}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{/if}}

{{#if this.responsetype}}
<h4>Response fields</h4>
<table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Type</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      {{#each this.responsetype.details.properties}}
      <tr>
        <td><code>{{@key}}</code></td>
        <td>
          <code>
            {{#if this.isobjectarray}}
              {{#linkToType}}{{~this.items.$ref~}}{{/linkToType}}[]
            {{else if this.isbasearray}}
              {{~this.items.type~}}[]
            {{else if this.type}}
              {{~this.type~}}
            {{else}}
              {{#linkToType}}
                {{~this.$ref~}}
              {{/linkToType}}
            {{/if}}
          </code></td>
        <td>{{#convertMarkdown}}{{{this.description}}}{{/convertMarkdown}}</td>
      </tr>
      {{/each}}
    </tbody>
</table>
{{/if}}
</div>
<div class="full-view">
  <div class="request">
    {{!-- HTTP example --}}
    {{#if this.requestExample}}
    <div class="tablet-only">
      {{languageSwitcher}}
    </div>
    <blockquote class="example http">
      <h4>Example HTTP Request</h4>
    </blockquote>
    <pre class="example http">{{#if this.requestExample.url}}<code class="no-highlight">{{~this.requestExample.httpMethod}} {{this.requestExample.url~}}</code>{{/if}}
    {{#if this.requestExample.body}}<code class="json">{{~this.requestExample.body~}}</code>{{/if}}</pre>
    {{/if}}

    {{!-- SDK examples --}}
    {{#each this.sdkRequestSamples}}
    <blockquote class="example {{language}}">
      <h4>Example Request in {{presentLanguage language}}</h4>
    </blockquote>
    <pre class="example {{language}}"><code class="{{language}}">{{~code~}}</code></pre>
    {{/each}}
  </div>

  <div class="response">
    {{!-- HTTP example --}}
    {{#if this.responseExample}}
    <blockquote class="example http">
      <h4>Example HTTP Response</h4>
    </blockquote>
    <pre class="example http"><code class="json">{{~this.responseExample~}}</code></pre>
    {{/if}}

    {{!-- SDK examples --}}
    {{#each this.sdkResponseSamples}}
    <blockquote class="example {{language}}">
      <h4>Example Response in {{presentLanguage language}}</h4>
    </blockquote>
    <pre class="example {{language}}"><code class="{{language}} no-highlight">{{~code~}}</code></pre>
    {{/each}}
  </div>

</div>
</div>
